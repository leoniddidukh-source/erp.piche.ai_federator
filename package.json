{
  "name": "piche.wc.react-app-template",
  "license": "CC-BY-NC",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist/",
    "!src/**/*.test.ts"
  ],
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint . --cache --fix --ext ts,tsx --report-unused-disable-directives --max-warnings=0",
    "format": "prettier --write .",
    "types": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "firebase": "^12.6.0",
    "piche.npm.core": "^1.1.23",
    "piche.ui": "^1.1.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-css-injected-by-js": "^3.3.0",
    "vite-plugin-html-env": "^1.2.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.4",
    "@types/jsoneditor": "^9.9.0",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "happy-dom": "^11.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "sass": "^1.64.2",
    "tsx": "^4.7.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.4"
  },
  "lint-staged": {
    "*.{ts,tsx,json,html,scss}": [
      "pnpm format"
    ],
    "*.{ts,tsx}": [
      "pnpm lint"
    ]
  }
}
